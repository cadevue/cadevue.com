---
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Moonwr Portfolio - Game, Web, and XR Development</title>
	</head>
	<body class="bg-main-black min-h-1.25s flex flex-col">
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	/* Font Import */
	@font-face {
		font-family: "Telegraf";
		src: url("/fonts/PPTelegraf-Regular.otf");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "Telegraf";
		src: url("/fonts/PPTelegraf-UltraBold.otf");
		font-weight: bold;
		font-style: normal;
		font-display: swap;
	}

	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	h1 {
		@apply text-2xl font-bold sm:text-4xl;
	}

	p {
		@apply text-base sm:text-xl;
	}

	a {
		@apply text-base sm:text-xl;
	}
</style>

<style>
	html,
	body {
		font-family: "Telegraf", sans-serif;

		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
	}
</style>
