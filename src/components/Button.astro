---
import ArrowIcon from "./ArrowIcon.astro"

const {title, href='/'} = Astro.props
---

<button class="bg-main-red px-7 py-0.5 rounded-full flex gap-3 items-center">
    <p class="text-lg text-main-light font-bold pb-1">{title}</p>
    <ArrowIcon color="#f4f6f1" classOverride="w-6 h-6 -rotate-45"/>
</button>