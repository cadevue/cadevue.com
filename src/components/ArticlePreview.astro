---
import type { AOSParams } from '../types';

interface Props {
    slug: string;
    title: string;
    last_updated: Date;
    description: string;
    aos?: AOSParams;
}

const { slug, title, last_updated, description, aos } = Astro.props;
const formattedDate = new Date(last_updated).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
---

<div class="flex flex-col" 
    data-aos={aos?.type} data-aos-anchor={aos?.anchor} data-aos-delay={aos?.delay}
>
    <a href=`/article/${slug}` class="w-fit text-main-light"><h2>{title}</h2></a>
    <p class="text-gray-400 text-sm sm:text-lg">Last Updated: {formattedDate}</p>
    <a href=`/article/${slug}` class="w-fit no-underline">
        <p class="text-gray-300 mt-2 line-clamp-2 text-sm sm:text-lg sm:line-clamp-3">{description}</p>
    </a>
</div>