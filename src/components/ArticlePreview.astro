---
interface Props {
    slug: string;
    title: string;
    write_date: Date;
    description: string;
}

const { slug, title, write_date, description } = Astro.props;
const formattedDate = new Date(write_date).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
---

<div class="flex flex-col">
    <a href=`/article/${slug}` class="w-fit text-main-light"><h2>{title}</h2></a>
    <p class="text-gray-400 text-sm sm:text-lg">Written on: {formattedDate}</p>
    <a href=`/article/${slug}` class="w-fit no-underline">
        <p class="text-gray-300 mt-2 line-clamp-2 text-sm sm:text-lg sm:line-clamp-3">{description}</p>
    </a>
</div>
