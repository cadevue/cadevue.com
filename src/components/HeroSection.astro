---
import { Image } from 'astro:assets'

import AnchorButton from './AnchorButton.astro'
import personaImage from '../assets/persona.jpg'
import ContentLayout from '../layouts/ContentLayout.astro'
---

<section class="w-full bg-main-black pt-4 pb-28 text-main-light">
    <ContentLayout>
        <div class="flex flex-col items-center gap-6 sm:gap-8 3xl:gap-10">
            <Image src={personaImage} alt="Addin Munawwar" class="w-48 aspect-square rounded-full sm:w-64 3xl:w-80"
                data-aos="fade-up" id="hero-start"
            />
            <div class="flex flex-col items-center gap-2 text-center max-w-xs sm:gap-2 sm:max-w-lg 3xl:max-w-xl">
                <div class="flex flex-col">
                    <h1 data-aos="fade-up" data-aos-delay="300" data-aos-anchor="#hero-start">
                        Addin Munawwar
                    </h1>
                    <p class="font-bold text-xl sm:text-2xl 3xl:text-3xl" data-aos="fade-up" data-aos-delay="450" data-aos-anchor="#hero-start">
                        or Cadevue
                    </p>
                </div>
                <p class="sm:text-xl 3xl:text-2xl" data-aos="fade-up" data-aos-delay="550" data-aos-anchor="#hero-start">
                    A creative, passionate learner and software engineer specialized in video game and web development.
                </p>
            </div>
            <AnchorButton label="contact me" href="/contact" aos={{ type: 'fade-up', delay: '900', anchor: '#hero-start' }}/>
        </div>
    </ContentLayout>
</section>