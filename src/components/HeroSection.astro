---
import { Image } from 'astro:assets'

import AnchorButton from './AnchorButton.astro'
import personaImage from '../assets/persona.jpg'
import ContentLayout from '../layouts/ContentLayout.astro'
---

<section class="w-full bg-main-black pt-8 pb-28 text-main-light">
    <ContentLayout>
        <div class="flex flex-col items-center gap-6 sm:gap-8">
            <Image src={personaImage} alt="Addin Munawwar" class="w-48 aspect-square rounded-full sm:w-64"
                data-aos="fade-up" id="hero-start"
            />
            <div class="flex flex-col items-center gap-1 sm:gap-2 text-center max-w-xs sm:max-w-md">
                <h1 data-aos="fade-up" data-aos-delay="300" data-aos-anchor="#hero-start">
                    Addin Munawwar
                </h1>
                <p class="sm:text-xl" data-aos="fade-up" data-aos-delay="450" data-aos-anchor="#hero-start">
                    software engineer specialized in video game and web development
                </p>
            </div>
            <AnchorButton title="contact me" href="/contact" aos={{ type: 'fade-up', delay: '900', anchor: '#hero-start' }}/>
        </div>
    </ContentLayout>
</section>