---
const { label, id, rows, placeholder, required } = Astro.props
---

<div class="flex flex-col gap-1 mb-3">
    <label for={id}>{label}</label>
    <textarea id={id} name={id} required={required} 
        class="w-full p-2 rounded-lg text-main-black outline outline-1 -outline-offset-1 outline-other-gray placeholder:outline-other-gray
        focus:outline focus:outline-3 focus:outline-main-red" rows={rows} placeholder={placeholder}
    ></textarea>
</div>