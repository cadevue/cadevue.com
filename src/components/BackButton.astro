---
interface Props {
    text?: string
    light?: boolean
}

const { text, light = true } = Astro.props
const fill = light ? 'fill-main-light' : 'fill-main-dark'
---

<button class="flex items-center gap-3 group" id="back-button" onclick="history.back()" aria-label="Back Button">
    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px"
        class=`
            ${ text ? 'w-4 h-4 sm:w-6 sm:h-6' : 'w-8 h-8 sm:w-8 sm:h-8'}
            ${fill} group-hover:fill-main-red
        `
    >
        <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z"/>
    </svg>
    <p class="underline group-hover:text-main-red">{text}</p>
</button>