---
import ContentLayout from "../layouts/ContentLayout.astro";
import AnchorButton from "./AnchorButton.astro";
---

<section class="w-full bg-main-black pt-48 pb-36 relative">
    <ContentLayout>
        <div class="flex flex-col gap-8">
            <div class="flex flex-col gap-2">
                <div class="flex items-center gap-2" data-aos="fade-up" id="contact-start">
                    <h1 class="text-main-light mt-1">Let's Collaborate</h1>
                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" 
                        width="24px" fill="#ba3a2c" class="w-9 h-9"
                    >
                        <path d="M320-240 80-480l240-240 57 57-184 184 183 183-56 56Zm320 0-57-57 184-184-183-183 56-56 240 240-240 240Z"/>
                    </svg>
                </div>
                <p class="text-main-light" data-aos="fade-up" data-aos-delay="200">We could build something cool together!</p>
            </div>
            <AnchorButton title="contact me" href="/contact" aos={{ type: "fade-up", delay: "400" }}/>
        </div>
    </ContentLayout>
</section>
