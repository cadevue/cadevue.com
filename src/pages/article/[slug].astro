---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContentLayout from '../../layouts/ContentLayout.astro';

// Static Generation
export const getStaticPaths = async () => {
    const articles : CollectionEntry<"articles">[] = await getCollection('articles');
    const paths = articles.map((article) => ({
        params: { slug: article.slug },
        props: { article: article }
    }));
    return paths;
};

const { article } = Astro.props;
const { Content } = await article.render();

const publishDate = article.data.date_published.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});

const lastUpdatedDate = article.data.date_last_updated.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});

import BackButton from '../../components/BackButton.astro';
---

<BaseLayout title=`${article.data.title} - Article by Addin Munawwar | Cadevue` description={article.data.meta_description}>
    <ContentLayout>
        <div class="w-full flex justify-center">
            <main class="text-main-light w-full max-w-4xl flex flex-col gap-8 3xl:max-w-5.5xl">
                <BackButton />
                <div class="flex flex-col">
                    <h1>{article.data.title}</h1>
                    <p class="text-gray-400">
                        <span>Published: {publishDate}</span> &nbsp;|&nbsp; <span>Last Updated: {lastUpdatedDate}</span>
                    </p>
                </div>
                <div class="flex flex-col gap-4">
                    <Content />
                </div>
                <BackButton text="Back" />
            </main>
        </div>
    </ContentLayout>
</BaseLayout>